<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/halo">
	<fx:Script>
		<![CDATA[
			import flash.events.MouseEvent;
			
			public function determineFontColor(active:Boolean, working:Boolean):uint
			{
				if (!active) return 0xcccccc;
				if (!working) return 0xff0000;
				return 0x000000;
			}
		]]>
	</fx:Script>
		
	<s:states>
		<s:State name="normal" />
		<s:State name="hovered" />
		<s:State name="selected" />
	</s:states>
	
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor color="black"
						  alpha="0"
						  alpha.hovered="0.4"
						  alpha.selected="0.4"/>
		</s:fill>
	</s:Rect>
	
	<s:Label color="{determineFontColor(data.active, data.working)}"
			 text="{data.label}"
			 paddingBottom="2" paddingTop="2" paddingLeft="2"
			 width="100%">
	</s:Label>
	
</s:ItemRenderer>
