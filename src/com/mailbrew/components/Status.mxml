<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/halo"
		 width="100%" height="15">

	<fx:Script>
		<![CDATA[
			import com.mailbrew.model.ModelLocator;
		]]>
	</fx:Script>

	<s:Line left="0" right="0" top="0">
		<s:stroke>
			<s:SolidColorStroke weight="1" color="0xCCCCCC"/>
		</s:stroke>
	</s:Line>

	<s:Label id="statusMessage" text="{ModelLocator.getInstance().statusMessage}" left="2" bottom="2"/>
	<mx:ProgressBar id="progress" indeterminate="true" visible="{ModelLocator.getInstance().showStatusProgressBar}" right="5" width="100" bottom="0" label="" labelPlacement="right"/>
</s:Group>
